{% extends '::base.html.twig' %}

{% block body %}
    <div class="raw">
        <div class="col-md-8">
            <h1>Recherche</h1>
        </div>
    </div>

    <div class="raw">
        <div class="col-md-12">
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                {{ form_row(form.searchInput, {'attr': {'class': 'form-control'}}) }}
            </div>
            <input type="submit" class="btn btn-success pull-right" value="Chercher"></input>
            {{ form_end(form) }}
        </div>
    </div>

    {% if searchResults is null %}
        {% include ':search/includes:last-articles.html.twig' %}
    {% else %}
        {% include 'search/includes/search-result.html.twig' %}
    {% endif %}

{% endblock body %}